<div class="outside">
  <div class="container" id="top">

    <h1>Eat Da Burger!</h1>

    <img src="http://clipartaz.com/wp-content/uploads/2017/02/hamburger-burger-and-sandwich-clipart-burger-sandwich-food-clip-art-photo-400x294.png"
      alt="burger">
  </div>
  <div id="whiteLtr">
    <div class="container" id="bodyBG">

      <h2 class="red" id="left">Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>

      <div id="middle">
        <h2 class="red">Burgers that are ready to eat!</h2>

        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>
      </div>

      <div id="right">
        <h2 class="red">Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
          </div>

          <div class="form-group">
            <label for="eaten">Devoured?</label>
            <br>
            <input type="radio" name="eaten" value="1"> Devoured!
            <br>
            <input type="radio" name="eaten" value="0"> Ready to eat...
          </div>

          <button type="submit">Add Burger</button>
          <br>
        </form>
      </div>
      <br>
    </div>
  </div>
</div>